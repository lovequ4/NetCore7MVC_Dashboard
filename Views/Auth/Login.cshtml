@model Dashboard.DTO.LoginDTO

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1">
    <link rel="stylesheet" type="text/css" href="~/assets/css/bootstrap-clearmin.min.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/roboto.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/font-awesome.min.css">
    <title>NetCore7-Demo</title>
    <style></style>
</head>
<body class="cm-login">

<div class="text-center" style="padding: 90px 0 30px 0; background: #fff; border-bottom: 1px solid #ddd">
    <img src="~/assets/img/logo-big.svg" width="300" height="45">
</div>

<div class="col-sm-6 col-md-4 col-lg-3" style="margin: 40px auto; float: none;">
    <form asp-action="Login" method="post">
        <div class="col-xs-12">
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon"><i class="fa fa-fw fa-user"></i></div>
                    <input asp-for="EmailOrName" class="form-control" placeholder="Name or Email" required/>
                </div>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon"><i class="fa fa-fw fa-lock"></i></div>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Password" required/>
                </div>
            </div>
        </div>
        <div class="col-xs-6">
            <div class="checkbox"><label><input type="checkbox" /> Remember me</label></div>
        </div>
        <div class="col-xs-6">
            @ViewBag.notice
            <button type="submit" class="btn btn-block btn-primary">Login</button>
        </div>
    </form>
    <div class="col-xs-12 text-center" style="margin-top: 30px;">
        <a href="@Url.Action("Signup", "Auth")">Create a Account!</a>
    </div>
</div>
        
</body>
</html>